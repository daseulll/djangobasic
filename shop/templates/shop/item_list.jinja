<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Blog</title>
    </head>
    <body>
        <h1>Ask Company</h1>
        {{ user }}
        <form action="" method="GET">
            <input type="text" name="q" value="{{ q }}">
            <input type="submit" value="search" />
        </form>
        <ul>
            {% for item in item_list %}
            <li>        
                {{ item.name }}
                {{ item.desc }}
                {{ item.price }}
            </li>
            {% endfor %}
        </ul>
    </body>
</html>